<%
  grid_props = {
    url: projects_path,
    eagerLoad: false,
    paginationOnTop: false,
    columns: {
      name: {
        label: 'Name'
      },
      created_at: {
        label: 'Created At',
        format: 'datetime'
      }
    },
    filter: {
      resource: 'q',
      collapsible: true,
      inputs: {
        name_cont: {
          label: 'Name'
        },
        created_at: {
          component: 'datefilter',
          label: 'Created At',
          fromPredicate: 'gteq',
          toPredicate: 'lteq'
        }
      }
    },
    data: {
      dataRows: @projects,
      count: @projects.total_count
    }
  }
%>

<%=
  react_component 'ProjectsGrid', {
    title: 'Listing Projects',
    grid: grid_props,
    flashMessages: flash.to_h
  }
%>