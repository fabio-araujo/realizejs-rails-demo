<%
  grid_props = {
    url: project_issues_path,
    eagerLoad: false,
    paginationOnTop: false,
    columns: {
      title: {
        label: 'Title'
      },
      description: {
        label: 'Description'
      },
      status: {
        label: 'Status',
        component: 'IssueStatus'
      },
      created_at: {
        label: 'Created At',
        format: 'datetime'
      }
    },
    filter: {
      resource: 'q',
      collapsible: false,
      inputs: {
        title_cont: {
          label: 'Title'
        },
        description_cont: {
          label: 'Description'
        },
        status_eq: {
          label: 'Status',
          component: :select,
          options: [
            { name: 'To Do', value: 0 },
            { name: 'In Progress', value: 1 },
            { name: 'Done', value: 2 }
          ]
        }
      }
    },
    data: {
      dataRows: @issues,
      count: @issues.total_count
    }
  }
%>

<%=
  react_component 'IssuesGrid', {
    title: "#{@project.name} Issues",
    flashMessages: flash.to_h,
    grid: grid_props
  }
%>