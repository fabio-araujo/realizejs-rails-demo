<%
  form_props = {
    resource: 'issue',
    style: 'oneLine',
    data: @issue,
    method: locals[:httpMethod],
    action: locals[:action],
    otherButtons: locals[:otherButtons],
    inputs: {
      title: {
        label: 'Title'
      },
      description: {
        label: 'Description',
        component: :textarea
      }
    }
  }
%>

<%=
  react_component 'IssuesForm', {
    form: form_props,
    title: locals[:title]
  }
%>